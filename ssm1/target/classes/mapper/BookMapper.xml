<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaishengit.mapper.BookMapper">
    <cache/>
    <insert id="save" parameterType="Book">
        INSERT INTO t_book(bookname,bookauthor,booknum,bookprice,typeid,pubid,bookpic)
        VALUES (#{bookname},#{bookauthor},#{booknum},#{bookprice},#{typeid},#{pubid},'')
    </insert>
    <select id="findAll" resultType="Book">
        SELECT t_book.*,
        t_booktype.id as 'bookType.id',t_booktype.booktype as 'bookType.bookType',
        t_publisher.id as 'publisher.id',t_publisher.pubname as 'publisher.pubname'
        FROM t_book
        INNER join t_booktype ON t_book.typeid = t_booktype.id
        INNER JOIN t_publisher on t_book.pubid = t_publisher.id
        ORDER by t_book.id DESC
    </select>
    <select id="del" parameterType="int">
        DELETE FROM t_book WHERE id=#{id}
    </select>
    <update id="update" parameterType="Book">
        UPDATE t_book SET bookname=#{bookname},bookprice=#{bookprice},
        booknum=#{booknum},bookauthor=#{bookauthor},typeid=#{typeid},pubid=#{pubid}
        WHERE id=#{id}
    </update>
    <select id="findBookById" parameterType="int" resultType="Book">
        SELECT * FROM t_book WHERE id=#{id}
    </select>
</mapper>