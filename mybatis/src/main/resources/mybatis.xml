<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <typeAliases>
        <typeAlias type="com.kaishengit.pojo.User" alias="User"/>
    </typeAliases>

    <!--环境的 开发，测试，线上。。 -->
    <environments default="dev">

        <environment id="dev">

            <transactionManager type="JDBC"/>

            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql:///forum"/>
                <property name="username" value="root"/>
                <property name="password" value="root"/>

            </dataSource>
        </environment>
        <environment id="test">

            <transactionManager type="JDBC"/>

            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql:///db_21_test"/>
                <property name="username" value="root"/>
                <property name="password" value="root"/>

            </dataSource>
        </environment>
    </environments>
    <!--加载mapper文件-->
    <!--<mappers>
        <mapper resource="mapper/UserMapper.xml"/>
        <mapper resource="mapper/NodeMapper.xml"/>
        <mapper resource="mapper/TopicMapper.xml"/>
    </mappers>-->
    <mappers>
        <mapper class="com.kaishengit.mapper"/>
    </mappers>

</configuration>